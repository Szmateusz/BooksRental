@model HomeIndexViewModel
@{

}

<section class="sec_search">

    @using (Html.BeginForm("Search", "Offer", FormMethod.Post))
    {
        @Html.TextBoxFor(x=>x.SearchQuery, new {placeholder = "Wyszukaj książki"})


        @Html.DropDownListFor(x => x.Genres, Html.GetEnumSelectList<Genres>(), "Wybierz gatunek")

        <button type="submit">Szukaj</button>
    }


</section>

<section class="slider">
    <div class="slide_item">
        <img src="" alt="item" />     
    </div>
</section>

<section >
  
    <h2>Polecane książki:</h2>
    <div>
        <ul>
                @if(Model.RecommendedBooks!=null){
                    @foreach (var book in Model.RecommendedBooks)
                    {
                        <li>
                            <div class="BookBox">
                                <h3>@book.Title</h3>

                                <p><img src="~/images/@book.Image"/></p>

                                <p>@book.Author</p>
                                <p>@book.Description</p>
                                <p>@book.Publisher  -  @book.Year</p>
                            </div>
                        </li>
                    }
                }
        
        </ul>
    </div>
</section>

<section>
    
        <h2>Najnowsze książki:</h2>
    <div>
        <ul>
            @if(Model.LatestBooks!=null){
                @foreach (var book in Model.LatestBooks)
                {
                    <li>
                        <div class="BookBox">
                            <h3>@book.Title</h3>

                            <p><img src="~/images/@book.Image" /></p>

                            <p>@book.Author</p>
                            <p>@book.Description</p>
                            <p>@book.Publisher  -  @book.Year</p>
                        </div>
                    </li>
                }
            }
          
        </ul>
    </div>
</section>
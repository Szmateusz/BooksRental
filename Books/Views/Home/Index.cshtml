@model HomeIndexViewModel
@{

}

<section class="sec_search">

    @using (Html.BeginForm("Index", "Offer", FormMethod.Get))
    {
        @Html.TextBoxFor(x=>x.SearchQuery, new {placeholder = "Wyszukaj książki"})


        @Html.DropDownListFor(x => x.Genres, Html.GetEnumSelectList<Genres>(), "Wybierz gatunek")

        <button type="submit">Szukaj</button>
    }


</section>


<section >
  
    <h2>Polecane książki:</h2>
    <div class="bookBody">

        <div class="arrow" onclick="recommendArrow('right')"><</div>
        <div id="recommendBooks" class="bookContainer customScroll">

            @if (Model.LatestBooks != null)
            {
                @foreach (var book in Model.LatestBooks)
                {
                    <a class="text-dark" asp-area="" asp-controller="Offer" asp-action="Details" asp-route-id="@book.Id">

                        <div class="bookBox">
                            <div class="box2">
                                <h3>@book.Title</h3>
                                <p><img src="~/images/@book.Image" /></p>
                            </div>
                            <p><h4>@book.Author</h4></p>
                            <p>@book.Description</p>
                            <p>@book.Publisher  -  @book.Year</p>
                        </div>
                    </a>

                }
            }

        </div>
        <div class="arrow" onclick="recommendArrow('left')">></div>

    </div>
  
</section>

<section>
    
        <h2>Najnowsze książki:</h2>
    <div class="bookBody">
        <div class="arrow" onclick="newestArrow('right')"><</div>

        <div id="newestBooks" class="bookContainer  customScroll">


            @if (Model.LatestBooks != null)
            {
                @foreach (var book in Model.LatestBooks)
                {
                    <a class="text-dark" asp-area="" asp-controller="Offer" asp-action="Details" asp-route-id="@book.Id">
                        <div class="bookBox">
                            <div class="box2">
                                <h3>@book.Title</h3>
                                <p><img src="~/images/@book.Image" /></p>
                            </div>
                            <p><h4>@book.Author</h4></p>
                            <p>@book.Description</p>
                            <p>@book.Publisher  -  @book.Year</p>
                        </div>
                    </a>
                }
            }

        </div>

        <div class="arrow" onclick="newestArrow('left')">></div>

    </div>
   
</section>
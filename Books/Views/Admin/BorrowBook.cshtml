<h1>Wypożycz książkę</h1>

<form method="post">
    <input type="hidden" name="BookId" value="@Model.Id">
    <div class="form-group">
        <label for="firstName">Imię</label>
        <input type="text" class="form-control" id="firstName" name="FirstName" required>
    </div>
    <div class="form-group">
        <label for="lastName">Nazwisko</label>
        <input type="text" class="form-control" id="lastName" name="LastName" required>
    </div>
    <div class="form-group">
        <label for="borrowDate">Data wypożyczenia</label>
        <input type="date" class="form-control" id="borrowDate" name="BorrowDate" required>
    </div>
    <button type="submit" class="btn btn-primary">Wypożycz książkę</button>
</form>
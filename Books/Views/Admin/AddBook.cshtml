@model Book

@{
    Layout = "_LayoutAdmin";
}
<h1>Dodawanie książki</h1>

@using (Html.BeginForm("AddBook", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
     <div class="form-group">
        @Html.LabelFor(x => x.Image)
            <input type="file" class="form-control" name="Image" id="Image"/>
        </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Title)
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Author)
        @Html.TextBoxFor(x => x.Author, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Description)
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    </div>
   
    <div class="form-group">
        @Html.LabelFor(x => x.Publisher)
        @Html.TextBoxFor(x => x.Publisher, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Genre)
        @Html.DropDownListFor(x => x.Genre, Html.GetEnumSelectList<Genres>(), "Gatunek", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.TotalCopies)
        @Html.TextBoxFor(x => x.TotalCopies, new { @class = "form-control", @type = "number" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.AvailableCopies)
        @Html.TextBoxFor(x => x.AvailableCopies, new { @class = "form-control", @type = "number" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.IsRecommended)
        @Html.CheckBoxFor(x => x.IsRecommended)
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Dodaj książkę</button>
}